



@model IEnumerable<NewAppBookShop.Areas.Admin.Controllers.UsersController.UsersRoleViewModel>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">User Management</h1>
        <a asp-action="Create" class="btn btn-primary">Add New User</a>
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserEmail</td>
                    <td>@user.Roles</td>
                    <td>
                        <!-- Correct Edit URL -->
                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", "Users", new { userId = user.UserId })">Edit</a>
                        
                        <!-- Delete button form -->
                        <form asp-action="Delete" asp-route-id="@user.UserId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

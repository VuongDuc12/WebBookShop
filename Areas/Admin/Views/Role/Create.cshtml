


@model string
@{
    ViewData["Title"] = "CREATE ROLE";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">Create a New Role</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Roles</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-info">Role Information</h5>
            <hr />

            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                
                <div class="mb-3">
                    <label for="name" class="form-label">Role Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter role name" required />
                    <div class="invalid-feedback">Role name is required.</div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="reset" class="btn btn-outline-secondary me-2">Reset</button>
                    <button type="submit" class="btn btn-primary">Create Role</button>
                </div>
            </form>
        </div>
    </div>
</div>
